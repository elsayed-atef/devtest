function Get-Level1Paths {
    param (
        [string]$WildcardPath
    )
    
    # Get the parent directory from the wildcard path
    $parentPath = Split-Path -Path $WildcardPath -Parent
    
    # Resolve the wildcard path to get all matching directories
    $allPaths = Get-ChildItem -Path $parentPath -Directory | Where-Object { $_.FullName -like $WildcardPath }

    # Create a list to store level 1 paths
    $level1Paths = @()

    foreach ($path in $allPaths) {
        # Get the immediate subdirectories of the matched path
        $subDirs = Get-ChildItem -Path $path.FullName -Directory
        
        foreach ($subDir in $subDirs) {
            $level1Paths += $subDir.FullName
        }
    }

    # Output the unique level 1 paths
    $level1Paths | Sort-Object -Unique
}

# Example usage
Get-Level1Paths "C:\temp\logs\*\*"
