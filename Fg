function Get-Level1Paths {
    param (
        [string]$WildcardPath
    )
    
    # Resolve the wildcard path to get all matching directories
    $allPaths = Get-ChildItem -Path $WildcardPath -Directory -Recurse
    
    # Create a hashset to store level 1 paths
    $level1Paths = @{}

    foreach ($path in $allPaths) {
        # Split the full path and get the parts
        $parts = $path.FullName -split '\\'
        
        # Reconstruct the level 1 path
        if ($parts.Count -ge 2) {
            $level1Path = "$($parts[0])\$($parts[1])"
            $level1Paths[$level1Path] = $true
        }
    }

    # Output the unique level 1 paths
    $level1Paths.Keys
}

# Example usage
Get-Level1Paths "C:\temp\logs\*\*"
